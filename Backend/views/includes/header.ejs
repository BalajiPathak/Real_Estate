<%- include('head.ejs') %>
<header class="bg-white shadow-md">
    <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            <!-- Company Info -->
            <div class="flex items-center">
                <div class="ml-4 flex space-x-4">
                    <% if (companyInfo) { %>
                        <div class="text-sm">
                            <i class="fas fa-phone"></i>
                            <span><%= companyInfo.Phone_No %></span>
                        </div>
                        <div class="text-sm">
                            <i class="fas fa-envelope"></i>
                            <span><%= companyInfo.Email %></span>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Social Links -->
            <div class="flex space-x-4">
                <% if (companyInfo) { %>
                    <% if (companyInfo.facebook) { %>
                        <a href="<%= companyInfo.facebook %>" class="text-gray-600 hover:text-rose-500">
                            <i class="fab fa-facebook"></i>
                        </a>
                    <% } %>
                    <% if (companyInfo.Instagram) { %>
                        <a href="<%= companyInfo.Instagram %>" class="text-gray-600 hover:text-rose-500">
                            <i class="fab fa-instagram"></i>
                        </a>
                    <% } %>
                    <% if (companyInfo.twitter) { %>
                        <a href="<%= companyInfo.twitter %>" class="text-gray-600 hover:text-rose-500">
                            <i class="fab fa-twitter"></i>
                        </a>
                    <% } %>
                    <% if (companyInfo.linkedIn) { %>
                        <a href="<%= companyInfo.linkedIn %>" class="text-gray-600 hover:text-rose-500">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</header>

<%- include('end.ejs') %>