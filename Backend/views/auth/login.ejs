<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<%- include('../includes/navbar.ejs') %>
<body class="bg-gray-100">
    <div class="page-head"> 
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">Home New account / Sign in </h1>               
                </div>
            </div>
        </div>
    </div>

    <div class="register-area" style="background-color: rgb(249, 249, 249);">
        <div class="container">

            <div class="col-md-6">
                <div class="box-for overflow">                         
                    <div class="col-md-12 col-xs-12 login-blocks">
                        <h2>Login : </h2> 
                        <% if (errorMessage) { %>
                            <div class="alert alert-danger"><%= errorMessage %></div>
                        <% } %>
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" 
                                    class="form-control <%= validationErrors.find(e => e.param === 'Email') ? 'is-invalid' : '' %>"
                                    id="Email"
                                    name="Email"
                                    value="<%= oldInput.Email %>"
                                    required>
                                <% if (validationErrors.find(e => e.param === 'Email')) { %>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address
                                    </div>
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="password" 
                                    class="form-control <%= validationErrors.find(e => e.param === 'Password') ? 'is-invalid' : '' %>"
                                    id="Password"
                                    name="Password"
                                    value=""
                                    required>
                                <% if (validationErrors.find(e => e.param === 'Password')) { %>
                                    <div class="invalid-feedback">
                                        <% if (errorMessage === 'Password didn\'t match') { %>
                                            Password didn't match
                                        <% } else if (validationErrors.find(e => e.param === 'Password' && e.msg.includes('5 characters'))) { %>
                                            Password must be at least 5 characters long
                                        <% } %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-default">Log in</button>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/reset" class="btn btn-link">Forgot Password?</a>
                                </div>
                        </form>
                        <br>
                        
                        <h2>Social login :  </h2> 
                        
                        <p>
                            <a class="login-social" href="/auth/google">
                                <i class="fa fa-google-plus"></i>&nbsp;Login with Google
                            </a>
                            <a class="login-social" href="/auth/facebook">
                                <i class="fa fa-google-plus"></i>&nbsp;Login with facebook
                            </a>
                        </p> 
                    </div>
                    
                </div>
            </div>

        </div>
    </div>  

    <!-- Keep existing form structure, update the style section -->

<style>
    .form-control.is-invalid {
        border-color: #dc3545 !important;
        background-color: #fff8f8 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }

    .invalid-feedback {
        display: block !important;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 80%;
        color: #dc3545;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control:focus.is-invalid {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
</style>
<%- include('../includes/end.ejs') %>